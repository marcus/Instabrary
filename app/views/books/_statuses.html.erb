<h3>This book and me:</h3>

<h4>My rating</h4>
<%= render :partial => 'stars', :locals => {:user => @user, :book => @book} %>

<h4>Click an option to change it</h4>
<% for book_status in book_statuses %>

	<% if book_status.active %>
		<% style = "color:green;"%>
		<% value = "yes!"%>
	<% else %>
		<% style = "color:gray;"%>
		<% value = "nope." %>
	<% end %>
	
	<%= link_to_remote book_status.status.name,
		:url => { :controller => 'book_statuses', :action => 'update', :book_status => book_status },
		:loading => 'show_loader()', :complete => 'hide_loader()',
		:html => {:style => style }  %> - 
	
	<%= value %>
<br />

<% end %>