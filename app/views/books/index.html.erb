<h1>Listing books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Isbn</th>
	<th>Author</th>
  </tr>

<% for book in @books %>
  <tr>
    <td><%=h book.title %></td>
    <td><%=h book.isbn %></td>
	<td><%=h book.authors %></td>
    <td><%= link_to 'Show', book %></td>
  </tr>
<% end %>
</table>

